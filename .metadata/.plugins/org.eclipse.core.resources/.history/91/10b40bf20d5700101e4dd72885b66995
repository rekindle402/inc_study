<script type="text/javascript">
	$(()=>{
		// 버튼을 누르면 서버의 jsp에게 색상변경을 요청하자!
		$("button").click(()=>{
			//select 박스의 값 얻기
			$("select").val();
			location.href="/color/main.jsp?bg=값"; // 링크는 Get 방식의 요청
		});	
	});
</script>
